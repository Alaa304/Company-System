@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<style>
    .auth-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Segoe UI', sans-serif;
    }

    .auth-card {
        width: 420px;
        padding: 40px;
        background: rgba(20, 20, 20, 0.88);
        backdrop-filter: blur(12px);
        border-radius: 20px;
        box-shadow: 0 0 35px rgba(0, 247, 255, 0.25);
        color: #fff;
        animation: fadeIn 0.9s ease;
    }

    .auth-card h2 {
        text-align: center;
        color: #00f7ff;
        margin-bottom: 6px;
    }

    .subtitle {
        text-align: center;
        font-size: 14px;
        color: #aaa;
        margin-bottom: 30px;
    }

    .input-group {
        position: relative;
        margin-bottom: 22px;
    }

    .input-group input {
        width: 100%;
        padding: 12px 10px;
        background: transparent;
        border: none;
        border-bottom: 2px solid #555;
        color: #fff;
        font-size: 15px;
        outline: none;
    }

    .input-group label {
        position: absolute;
        top: 12px;
        left: 10px;
        color: #aaa;
        pointer-events: none;
        transition: 0.3s;
    }

    .input-group input:focus ~ label,
    .input-group input:not(:placeholder-shown) ~ label {
        top: -8px;
        font-size: 12px;
        color: #00f7ff;
    }

    .input-group input:focus {
        border-color: #00f7ff;
    }

    span {
        font-size: 12px;
        color: #ff6b6b;
    }

    .terms {
        margin: 15px 0;
        font-size: 14px;
    }

    .terms input {
        accent-color: #00f7ff;
    }

    .btn-glow {
        width: 100%;
        padding: 12px;
        margin-top: 10px;
        border: none;
        border-radius: 30px;
        background: linear-gradient(90deg, #00f7ff, #00c3ff);
        color: #000;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s;
        box-shadow: 0 0 18px rgba(0, 247, 255, 0.7);
    }

    .btn-glow:hover {
        transform: scale(1.05);
        box-shadow: 0 0 28px rgba(0, 247, 255, 1);
    }

    .switch {
        margin-top: 20px;
        text-align: center;
        font-size: 14px;
    }

    .switch a {
        color: #00f7ff;
        text-decoration: none;
        font-weight: bold;
    }

@@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(25px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="auth-container">
    <div class="auth-card">
        <h2>Create Account ✨</h2>
        <p class="subtitle">Join us and start your journey</p>

        <form asp-action="Register" method="post" asp-controller="Account">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="input-group">
                <input asp-for="FirstName" placeholder=" " />
                <label>First Name</label>
                <span asp-validation-for="FirstName"></span>
            </div>

            <div class="input-group">
                <input asp-for="LastName" placeholder=" " />
                <label>Last Name</label>
                <span asp-validation-for="LastName"></span>
            </div>

            <div class="input-group">
                <input asp-for="UserName" placeholder=" " />
                <label>User Name</label>
                <span asp-validation-for="UserName"></span>
            </div>

            <div class="input-group">
                <input asp-for="Email" placeholder=" " />
                <label>Email</label>
                <span asp-validation-for="Email"></span>
            </div>

            <div class="input-group">
                <input asp-for="Password" type="password" placeholder=" " />
                <label>Password</label>
                <span asp-validation-for="Password"></span>
            </div>

            <div class="input-group">
                <input asp-for="ConfirmPassword" type="password" placeholder=" " />
                <label>Confirm Password</label>
                <span asp-validation-for="ConfirmPassword"></span>
            </div>

            <div class="terms">
                <label>
                    <input asp-for="IsAgree" />
                    I agree to the Terms & Conditions
                </label>
            </div>

            <button type="submit" class="btn-glow">SIGN UP</button>
        </form>

        <p class="switch">
            Already have an account?
            <a asp-action="Login">Login</a>
        </p>
    </div>
</div>
