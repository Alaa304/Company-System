@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<style>
    .auth-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Segoe UI', sans-serif;
    }

    .auth-card {
        width: 400px;
        padding: 40px;
        background: rgba(20, 20, 20, 0.88);
        backdrop-filter: blur(12px);
        border-radius: 20px;
        box-shadow: 0 0 35px rgba(0, 247, 255, 0.25);
        color: #fff;
        animation: fadeIn 0.9s ease;
    }

    .auth-card h2 {
        text-align: center;
        color: #00f7ff;
        margin-bottom: 6px;
    }

    .subtitle {
        text-align: center;
        font-size: 14px;
        color: #aaa;
        margin-bottom: 30px;
    }

    .input-group {
        position: relative;
        margin-bottom: 24px;
    }

    .input-group input {
        width: 100%;
        padding: 12px 10px;
        background: transparent;
        border: none;
        border-bottom: 2px solid #555;
        color: #fff;
        font-size: 15px;
        outline: none;
    }

    .input-group label {
        position: absolute;
        top: 12px;
        left: 10px;
        color: #aaa;
        pointer-events: none;
        transition: 0.3s;
    }

    .input-group input:focus ~ label,
    .input-group input:not(:placeholder-shown) ~ label {
        top: -8px;
        font-size: 12px;
        color: #00f7ff;
    }

    .input-group input:focus {
        border-color: #00f7ff;
    }

    span {
        font-size: 12px;
        color: #ff6b6b;
    }

    .remember {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 14px;
        margin: 15px 0;
    }

    .remember input {
        accent-color: #00f7ff;
    }

    .remember a {
        color: #00f7ff;
        text-decoration: none;
        font-size: 13px;
    }

    .btn-glow {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 30px;
        background: linear-gradient(90deg, #00f7ff, #00c3ff);
        color: #000;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s;
        box-shadow: 0 0 18px rgba(0, 247, 255, 0.7);
    }

    .btn-glow:hover {
        transform: scale(1.05);
        box-shadow: 0 0 28px rgba(0, 247, 255, 1);
    }

    .switch {
        margin-top: 20px;
        text-align: center;
        font-size: 14px;
    }

    .switch a {
        color: #00f7ff;
        text-decoration: none;
        font-weight: bold;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(25px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="auth-container">
    <div class="auth-card">
        <h2>Welcome Back 👋</h2>
        <p class="subtitle">Login to continue</p>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="All"></div>

            <div class="input-group">
                <input asp-for="Email" placeholder=" " />
                <label>Email</label>
                <span asp-validation-for="Email"></span>
            </div>

            <div class="input-group">
                <input asp-for="Password" type="password" placeholder=" " />
                <label>Password</label>
                <span asp-validation-for="Password"></span>
            </div>

            <div class="remember">
                <label>
                    <input asp-for="RememberMe" />
                    Keep me signed in
                </label>

                <a asp-action="ForgetPassword">Forgot Password?</a>
            </div>

            <button type="submit" class="btn-glow">SIGN IN</button>
        </form>

        <p class="switch">
            Don’t have an account?
            <a asp-action="Register">Create one</a>
        </p>
    </div>
</div>
