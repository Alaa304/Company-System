@model DepartmentViewModel
@{
    ViewData["Title"] = "Create Department";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm p-4">
                <h2 class="text-center mb-4">Create Department</h2>
                <form method="post" asp-controller="Department" asp-action="Create">
                    <partial name="PartialViews/_CreateEditPartialView"></partial>

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-primary">Create</button>
                        <a class="btn btn-outline-dark" asp-controller="Department" asp-action="Index">Back to list</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section ValidationSection
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
